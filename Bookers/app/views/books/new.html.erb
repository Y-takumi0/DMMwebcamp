<h1>New book</h1>
<%= form_with model: @book do |f| %>
<div class="form">
  <div class="field">
    <subject>Title</subject>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <subject>body</subject>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>

</div>

<% end %>
