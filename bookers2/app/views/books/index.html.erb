<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%@books.each do |book| %>
      <table class="table">
      <%= image_tag book.get_image %>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <% end %>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block">
          <i class="fa-solid fa-user-gear"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @books.new do |f| %>
      <div class="form-group">
        <label class="book-title">Title</label>
        <input class="form-control book_title" type="text" name="book[title]" id="book_title">
      </div>
      <div class="form-group">
        <label class="book-opinion">Opinion</label>
        <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>
      <% end %>
    </div>
  </div>
</div>