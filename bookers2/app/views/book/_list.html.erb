<% @books.each do |book| %>
<!-- @books â†’ books -->
<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @book.get_profile_image(100,100) %>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
    </tr>
  </table>
  <div class="row">
    <i class="fa-solid fa-user-gear"></i>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>
<% end %>