<div class="row">
<%= render 'book/list', books: @books %>

<% @books.each do |book| %>
  <div class="col-md-8">
    <h2>Books</h2>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= image_tag book.user.get_profile_image(100,100) %>
        </td>
        <td>
          <%= @book.title %>
        </td>
        <td>
          <%= @book.body %>
        </td>
      </tr>
    </tbody>
  </div>
<% end %>
</div>