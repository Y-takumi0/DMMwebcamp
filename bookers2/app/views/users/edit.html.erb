<p>
  <%= flash[:notice] %>
</p>
<div class="container">
  <div class="row no-gutters">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <label class="book-title">Name</label>
        <%= f.text_field :name, class:"form-control book_title"%>
      </div>
      <div class="form-group">
        <label class="book-title">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label class="book-opinion">Introduction</label>
        <%= f.text_area :introduction, class:"form-control book_body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>