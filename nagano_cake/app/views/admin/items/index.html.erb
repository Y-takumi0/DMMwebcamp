<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
      <div class="text-right">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn-outline-dark btn-circle btn-lg">＋</button>
      <% end %>
      </div>
      <table class="table">
        <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @item.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
           <td><%= item.genre.name %></td>
           <td><% if item.is_sale %>
                   販売中
                  <% else %>
                  <%=  "販売停止中" %>
                <% end %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
