<div class="container">
  <div class="row">
    <h4 class="my-3 bg-light">商品詳細</h4>
    <!-- 更新成功表示 -->
    <p>
      <%= flash[:notice] %>
    </p>
  </div>
  <div class="row">
    <img class="col-sm-3" style="width: 200px; height: 200px;" src="<%= url_for(@item.image) %>">
    <div class="col-sm-9">
      <!-- 商品名の表示 -->
      <strong class="col-sm-3">商品名</strong>
      <div class="my-2 col-sm-9"><%= @item.name %></div>
      <!-- 商品説明の表示 -->
      <strong class="col-sm-3">商品説明</strong>
      <div class="my-2 col-sm-6"><%= @item.introduction %></div>
      <!-- 商品ジャンルの表示 -->
      <strong class="col-sm-3">ジャンル</strong>
      <div class="my-2 col-sm-9"><%= @item.genre.name %></div>
      <!-- 商品価格の表示 -->
      <strong class="col-sm-3">税込価格(税抜価格)</strong>
      <div class="my-2 col-sm-9">
        <%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@item.price).floor.to_s(:delimited) %>)円
      </div>
      <!-- 商品ステータスの表示 -->
      <strong class="col-sm-3">販売ステータス</strong>
      <div class="my-2 col-sm-9">
        <%= @item.is_sale ? '販売中' : '販売停止中' %>
      </div>
      <!--  -->
      <div class="col-sm-3">
        <%= link_to "編集する",edit_admin_item_path(@item), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>
