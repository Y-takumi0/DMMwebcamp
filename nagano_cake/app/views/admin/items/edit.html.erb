<div class="container mt-5">
  <h2 class="mb-4"><%= @item.name %>の商品情報編集</h2>

  <%= form_with model: @item, url: admin_item_path(@item), method: :patch, local: true do |f| %>
    <% render "public/shared/error_messages", resource: @item %>

      <div class="row">
          <label class="col-lg-3">商品名</label>
          <div class="col-lg-3">
            <%= f.text_field :name,autoforcus: true, autocomplete: "name" %>
          </div>
      </div>

      <div class="row">
        <label class="col-lg-3">商品説明</label>
        <div class="col-lg-3">
          <%= f.text_area :introduction,autoforcus: true, autocomplete: "introduction" %>
        </div>
      </div>

       <div class="row">
        <div class="col-lg-3">
         <%= f.label :genre_id,'ジャンル', class: 'col-sm-3 col-form-label' %>
            <div class="col-sm-9">
              <%= f.collection_select :genre_id, Genre.all, :id, :name, {class: 'form-control'} %>
            </div>
        </div>
      </div>

      <div class="row">
        <label class="col-lg-3">税抜価格</label>
        <div class="col-lg-3">
          <%= f.number_field :price, class: 'form-control' %>
          <div class="input-group-append">
            <span class="input-group-text">円</span>
          </div>
        </div>
      </div>

    <div class="row">
      <label class="col-lg-3">販売ステータス</label>
      <div class="col-lg-3">
        <%= f.select :is_sale, [['販売中', false], ['販売停止中', true]], {}, { class: 'form-control' } %>
      </div>
    </div><br>

    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-3"></div>
          <div class="col-lg-9"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
        </div>
      </div>
    </div>

  <% end %>

</div>