<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5 col-sm-3 text-center bg-light">管理者ログイン</h4>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <table  class="table table-borderless">
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, autofocus: true, :size=>"40" %></td>
        </tr>

        <tr>
          <td>パスワード</td>
          <td><%= f.password_field :password, autofocus: true, :size=>"40" %></td>
        <tr>
        </table>

        <div  class="text-center">
          <tr class="actions text-center">
            <%= f.submit "ログイン", class:"btn btn-primary" %>
          </tr>
        </div>
      <% end %>
    </div>
  </div>
</div>