<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">管理者ログイン</h4>
      <table class="table table-borderless">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>

        <tr>
          <td>パスワード</td>
          <td><%= f.text_field :password %></td>
        </tr>

        <tr>
          <td><%= f.submit "ログイン", class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </table>

<%= render "admin/shared/links" %>
