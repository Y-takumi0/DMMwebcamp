<h1>注文履歴一覧</h1>
        <table class='table order-table'>
          <thead>
            <tr>
              <th class="active col-xs-4">購入日時</th>
              <th class="active col-xs-4">購入者</th>
              <th class="active">注文個数</th>
              <th class="active">注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to admin_order_path(order) do %><%= order.created_at.strftime("%Y/%m/%d %H:%M")  %><% end %></td>
                <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                <td></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>