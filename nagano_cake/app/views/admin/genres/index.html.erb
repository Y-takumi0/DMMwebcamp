<div class="container">
  <!-- ジャンル名の登録 -->
  <div class="row">
    <%= form_with(model: @genre, url: admin_genres_path, class: 'form-group') do |f| %>
    <h4 class="my-3 bg-light">ジャンル一覧・追加</h4>
    <%= f.label :name, "ジャンル名", class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control my-2' %>
    <%= f.submit "新規登録", class: 'btn btn-success' %>
    <% end %>
  </div>
  <!--  -->
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- ジャンル名の表示 -->
      <table class="table table-striped">
        <thead>
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!--  -->
  </div>
</div>
</div>
