<div class="container mt-5">
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local: true do |f| %>
  <div class="row">
    <% render "public/shared/error_messages", resource: @customer %>
    <h2 class="my-3 bg-light"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h2>
  </div>

    <div class="row">
      <strong class="my-2 col-sm-3">会員ID</strong>
      <div class="my-2 col-sm-9"><%= @customer.id %></div>
      <!-- 名前の更新 -->
      <strong class="my-2 col-sm-3">名前</strong>
      <div class="my-2 col-sm-4">
        <%= f.text_field :last_name,autoforcus: true, autocomplete: "last_name" %>
      </div>
      <div class="my-2 col-sm-4">
        <%= f.text_field :first_name,autoforcus: true, autocomplete: "first_name" %>
      </div>
      <!-- フリガナの更新　-->
      <strong class="my-2 col-sm-3">フリガナ</strong>
      <div class="my-2 col-sm-4">
        <%= f.text_field :last_name_kana,autoforcus: true, autocomplete: "last_name_kana" %>
      </div>
      <div class="my-2 col-sm-4">
        <%= f.text_field :first_name_kana,autoforcus: true, autocomplete: "first_name_kana" %>
      </div>
      <!-- 郵便番号の更新 -->
      <strong class="my-2 col-sm-3">郵便番号（ハイフンなし）</strong>
      <div class="my-2 col-sm-9">
        <%= f.text_field :postcode,autoforcus: true, autocomplete: "postcode" %>
      </div>
      <!-- 住所の更新 -->
      <strong class="my-2 col-sm-3">住所</strong>
      <div class="my-2 col-sm-9">
        <%= f.text_field :address,autoforcus: true, autocomplete: "address", :size=>"73" %>
      </div>
      <!-- 電話番号の更新 -->
      <strong class="my-2 col-sm-3">電話番号（ハイフンなし）</strong>
      <div class="my-2 col-sm-9">
        <%= f.text_field :telephone,autoforcus: true, autocomplete: "telephone" %>
      </div>
      <!-- メールアドレスの更新 -->
      <strong class="my-2 col-sm-3">メールアドレス</strong>
      <div class="my-2 col-sm-9">
        <%= f.text_field :email,autoforcus: true, autocomplete: "email",  placeholder: "sample@exanple.com" %>
      </div>
      <!-- 会員ステータスの更新 -->
      <strong class="my-2 col-sm-3">会員ステータス</strong>
      <div class="my-2 col-sm-9">
        <%= f.radio_button :is_active, "ture" %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :is_active, "退会済み" %>
      </div>
      <!-- 更新ボタンの調整 -->
      <div class="my-2 col-lg-3"></div>
      <div class="my-2 col-lg-9"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
    </div>
    <% end %>
  </div>
</div>
