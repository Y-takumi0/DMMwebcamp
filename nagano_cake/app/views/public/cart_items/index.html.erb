<div>
  <h1>ショッピングカート</h1>
	<div>
		<div>
		    <%= link_to all_destroy_cart_items_path, method: :delete do %>
		      <button>カートを空にする</button>
		    <% end %>
		</div>
		<br>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <img style="width: 200px; height: 200px;" src="<%= url_for(cart_item.item.image) %>">
          </td>
          <td>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= (cart_item.item.price*1.1).floor.to_s(:delimited) %>
          </td>
          <td>
            <%= form_with model:cart_item, url:cart_item_path(cart_item.id) , local:true do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更" %>
          </td>
          <td>
            <%= ((cart_item.item.price*1.1) * cart_item.amount).floor.to_s(:delimited) %>
          </td>
          <td>
            <%= link_to "削除", cart_item_path(cart_item.id) ,  method: :delete , "data-confirm" => "商品を削除しますか？" %>
          </td>
         </tr>
      </table>
      <% end %>
      <% end %>
    <%= link_to "買い物を続ける" , root_path %>
    合計金額 <%= @total.floor.to_s(:delimited) %>
    <% if current_customer.cart_items.any? %>
		      <% if current_customer.cart_items.any? %>
		      	<%= link_to new_order_path do %>
		          <button>情報入力に進む</button>
		        <% end %>
		      <% end %>
		  <% end %>
	</div>
</div>