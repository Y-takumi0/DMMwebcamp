<div class="container">
  <div class="row">
    <div class="col">
      <p>
        <%= flash[:error] %>
      </p>
      <h4 class="my-5">ログイン</h4>
      <table class="table table-borderless">
      <%= form_with model: @customer, url: customer_session_path(current_customer) do |f| %>
      <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>

        <tr>
          <td>パスワード</td>
          <td><%= f.text_field :password %></td>
        </tr>

        <tr>
          <td class:"actions">
            <%= f.submit "ログイン", class:"btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </table>

      <h4 class="my-5">会員登録がお済でない方</h4>
        <tr>
          <%= link_to "こちら",new_customer_registration_path,  class:"btn btn-primary ml-3" %>
          <td>から新規登録を行ってください。</td>
        </tr>