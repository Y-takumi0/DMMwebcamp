<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
<h1 class="text-center">配送先登録/一覧</h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <table>
    <%= form_with(model: @address, url: addresses_path, class: 'form-group') do |f| %>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>

      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-success' %></td>
            <td><%= link_to '削除する', address_path(address.id), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>