<div class="container">
  <div class="row">
    <h4 class="my-3 bg-light">配送先登録/一覧</h4>
  </div>

<div class="row">
  <div class="col-md-8">
    <table>
    <%= form_with(model: @address, url: addresses_path, class: 'form-group') do |f| %>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, :size=>"50" %></td>
      </tr>

      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-8">
    <table class="table table-bordered">
      <thead>
        <tr class="bg-light">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-success' %>
            <%= link_to '削除する', address_path(address.id), method: :delete, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>