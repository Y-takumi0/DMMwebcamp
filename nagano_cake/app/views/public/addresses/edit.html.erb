<div class="container">
  <div class="row">
    <div class="col">
    <h4 class="my-5">配送先編集</h4>

    <table class="table table-borderless">
      <%= form_with model: @address, url: address_path,method: :patch do |f| %>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, :size=>"50" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
      </tr>
    <% end %>
    </table>
    </div>
  </div>
</div>