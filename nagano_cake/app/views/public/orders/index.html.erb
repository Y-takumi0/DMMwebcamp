<h3>注文履歴一覧</h3>
  <table class="order-table table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td>
            〒<%= order.postcode %><br/>
            <%= order.address %><br/>
            <%= order.name %>
          </td>
          <td>

          </td>
          <td><%= "#{order.payment_amount.to_s(:delimited)}" %>円</td>
          <td><%= order.status %></td>
          <td><%= link_to '表示する', order_path(order.id) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>