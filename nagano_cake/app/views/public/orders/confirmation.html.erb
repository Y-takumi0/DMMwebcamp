<div class="container">
<h1>注文情報確認</h1>
  <div class="row">
    <div class="col-xs-8">
      <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
      <% total = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
              <img style="width: 50px; height: 50px;" src="<%= url_for(cart_item.item.image) %>">
              <%= cart_item.item.name %>
          </td>
          <td>¥<%= (cart_item.item.price * 1.1).floor.to_s(:delimited) %>円</td>
          <td><%= cart_item.amount %></td>
          <td>¥<%= ((cart_item.item.price * 1.1) * cart_item.amount).floor.to_s(:delimited) %>円</td>
        </tr>
        <% total += (cart_item.item.price * 1.1) * cart_item.amount %>
      <% end %>
      </tbody>
    </table>
    </div>
    <%= form_with model: @order, url: orders_path, local: true do |f| %>
    <% @order.postage = 800 %>
    <div class="col-xs-3">
        <table class="table">
          <tbody>
            <tr>
              <td class="confirm-td">送料</td>
              <td>
                  ¥<%= @order.postage.to_s(:delimited) %>円
                  <%= f.hidden_field :postage %>
              </td>
            </tr>
            <tr>
              <td class="confirm-td">商品合計</td>
              <td>
                ¥<%= total.floor.to_s(:delimited) %>円
              </td>
            </tr>
            <tr>
              <td class="confirm-td">請求金額</td>
              <td>
                ¥<%= (total + @order.postage).floor.to_s(:delimited) %>円
                <%= f.hidden_field :payment_amount, :value => (total + @order.postage) %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
  <div class="row">
    <h3>支払方法</h3>
      <h4><%= @order.payment_method_i18n%></h4>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %></br>
    <h3>お届け先</h3>
      <%= @order.postcode.to_s.insert(3, "-") %></br>
      <%= f.hidden_field :postcode, :value => @order.postcode %>
      <%= @order.address %></br>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= @order.name %></br>
      <%= f.hidden_field :name, :value => @order.name %>
  </div>
    <div class="text-right">
      <%= link_to "情報入力へ戻る", new_order_path %>
    </div>
    <div class="text-center">
      <%= f.submit "購入を確定する", class: "btn btn-success btn-lg text-center" %>
    </div>
    <% end %>
</div>