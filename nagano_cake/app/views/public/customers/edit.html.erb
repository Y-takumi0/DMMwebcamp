<div class="container">
  <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
  <div class="row">
    <div class="col">
      <h4 class="my-5">会員情報編集</h4>
      <!-- 本人会員情報編集-->
      <table class="table table-borderless">
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postcode %></td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone %></td>
          <td></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td class="action"><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
          <td><%= link_to "退会する", unsubscribe_customers_path, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </table>
      <!-- -->
    </div>
  </div>
</div>