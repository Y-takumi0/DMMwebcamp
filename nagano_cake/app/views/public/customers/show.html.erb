<div class="container">
  <div class="row">
    <!-- 登録情報更新のフラッシュメッセージ-->
    <div class="text-green">
      <%= flash[:update] %>
    </div>
    <!-- -->
    <h4 class="my-5 bg-light">マイページ</h4>
  </div>
  <div class="d-flex align-items-center">
    <h3><b>登録情報</b></h3>
    <%= link_to "編集する", edit_customer_path, class:"btn btn-success ml-3" %>
  </div>
  <!-- 登録情報の表示-->
  <table class="table table-bordered col-md-8">
    <tr>
      <td class="bg-light col-md-3">氏名</td>
      <td><%= @customer.first_name %> <%= @customer.last_name %></td>
    </tr>
    <tr>
      <td class="bg-light col-md-3">カナ</td>
      <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td class="bg-light col-md-3">郵便番号</td>
      <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <td class="bg-light col-md-3">住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td class="bg-light col-md-3">電話番号</td>
      <td><%= @customer.telephone %></td>
    </tr>
    <tr>
      <td class="bg-light col-md-3">メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  <!-- -->
    <div class="d-flex align-items-center">
      <h3><b>配送先</b></h3>
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary ml-3" %>
    </div>
    <div class="d-flex align-items-center">
      <h3><b>注文履歴</b></h3>
      <%= link_to "一覧を見る", orders_path, class:"btn btn-primary ml-3" %>
   </div>
</div>